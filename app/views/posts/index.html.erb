<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
  </head>

  <body>
<main>
<%# 上部の写真表記 %>

  <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
      <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
      <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
      <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
      <li data-bs-target="#myCarousel" data-bs-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <svg class="bd-placeholder-img"    ><%= image_tag "IMG_0292.jpg", size:"100x100"%></svg>
        <div class="container">
          <div class="carousel-caption">
            <p>館鼻漁港</p>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <svg class="bd-placeholder-img" width="100%" height="10%"    ><%= image_tag "IMG_0293.jpg"%></svg>
        <div class="container">
          <div class="carousel-caption">
            <p>館鼻漁港 漁船</p>
          </div>
        </div>
      </div>
      
      <div class="carousel-item">
        <svg class="bd-placeholder-img" width="100%" height="10%"    ><%= image_tag "IMG_0286.jpg"%></svg>
        <div class="container">
          <div class="carousel-caption ">
            <p>フェリー埠頭</p>
          </div>
        </div>
      </div>

      <div class="carousel-item">
        <svg class="bd-placeholder-img" width="100%" height="10%"    ><%= image_tag "IMG_0287.jpg"%></svg>
        <div class="container">
          <div class="carousel-caption ">
            <p>蕪嶋神社</p>
          </div>
        </div>
      </div>
      </div>
    </div>
    
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </a>
  </div>
  
    <%# 特徴表記 %>
   <div class="body-point">
       <div class="feature">
         <h2><span class="blue">fish-spot</span>の特徴</h2>  
      </div>
   </div>
        <div class="flat-body">
        <div class="col-lg-4">
          <svg class="img"  ><%= image_tag "fishing_fish_man.png", size: "450x400"  %></svg>
          <h2 class="jouhou">情報共有をしよう！</h2>
          <p class="font-size">釣った魚をリアルタイムで報告し合える</p>
        </div>
        <div class="col-lg-4">
          <svg class="img" width="140" height="140" ><%= image_tag "fishing_spot.png", size: "450x400"  %></svg>
          <h2 class="jouhou">釣りスポットを共有しよう！</h2>
          <p class="font-size">八戸近郊の釣りスポット、おすすめの時間を共有し合える</p>
        </div>
        </div>
    
   <%# 投稿一覧、地図表記 %>
  <div class="beside">
    <div class="fish-flat">
      <%= render partial: 'post' %>
    </div>
   
      <div class="row">
          <%= render "shared/map"%>
      </div>
    </div>
 
</main>

   <%if user_signed_in? %>
      <%= link_to(new_post_path, class: 'purchase-btn') do %>
      <span class='purchase-btn-text'>新規投稿</span>
      <% end %>
   <% end %>

  </body>
</html>
