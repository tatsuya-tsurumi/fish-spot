        <div class="show">
        <div class="show_info">
        <p class="posts_all">タイトル：<%= @post.title %></p>
           
              <p class="show_picture"><%= image_tag @post.image, size:"600x350" %></p>
             
        <p class="posts_all">魚の種類：<%= @post.aimble_fish%></p>
        <p class="posts_all">おすすめの時間帯：<%= @post.time_zone.name%></p>
        <p class="posts_all">おすすめの仕掛け：<%= @post.trick%></p>
        <p class="posts_all">ポイントの説明：<span><%= @post.comment%></span></p>
        <p class="posts_all">投稿者：<%=@post.user.nickname%>さん</p>
        </div>

        <%if user_signed_in?%>
        <div class= "position">
        <%= link_to 'チャットルーム', post_messages_path(@post), class:"show_chatroom" %>
        <% if current_user == @post.user %>
        <%= link_to '編集', edit_post_path, class:"show_edit" %>
        <%= link_to '削除', post_path, method: :delete, class:"show_edit" %>
        <% end %>
        </div>
        <%end%>
        </div>