<div class= "post_header">
ルーム名：<%= @post.title %>


<%= link_to '退出', post_path(@post,class:"message_link") %>
      
      
</div>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>


<%= form_with model: [@post,@message], class: 'form', local: true do |f| %>
<div class="form-input">
    <p><%= f.text_area :comment, class: 'form-message', placeholder: 'type a message' %></p>
    <label class="form-image">
      <span class="image-file">画像を添付できます</span>
      <p><%= f.file_field :image, class:"hidden" %></p>
    </label>

  <p><%= f.submit '送信', class: 'form-submit' %></p>
 
<% end %>
</div>