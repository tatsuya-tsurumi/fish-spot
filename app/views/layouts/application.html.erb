<!DOCTYPE html>
<html>
  <head>
    <title>FishSpot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
   <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container-fluid">
      <%= link_to "fish-spot", root_path, class:"navbar-brant" %>

      
      <% if user_signed_in?%>
        <div class=flat-header>
           <%= link_to "#{current_user.nickname}さん", root_path, class: :log%>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "log" %>
         </div>
      <% else %>
          <div class=flat-header>
            <%= link_to 'ログイン', new_user_session_path, class: "log" %>
            <%= link_to '新規登録', new_user_registration_path, class: "log" %>
          </div>
      <% end %>


  </header>

  <body>
    <%= yield %>
  </body>

  


</html>
